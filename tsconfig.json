{
  // 타입스크립트 파일이 어디에 위치하는가? include
  //src 폴더에 있는 모든 파일을 타입스크립트가 체크한다는 의미.
  "include": ["src"],
  "compilerOptions": {
    "outDir": "build", //컴파일 된 자바스크립트가 만들어질 폴더
    "target": "ES6", //어떤 버전의 JS로 컴파일 할 지 정할 수 있음.
    //내가 사용할 API를 등록해두면 타입스크립트가 자동완성기능을 제공해 준다.
    //DOM은 Document(브라우저)를 의미함.
    "lib": ["ES6"],
    "strict": true, //엄격한 타입모드. true상태가 되면 상당히 성가시게 할거야.
    //js파일을 TS가 자동으로 추론할 수 있게 허용해준다.
    //이 옵션이 없으면 js파일을 파악하는데 ts의 도움을 받을 수 없다.
    "esModuleInterop": true,
    "module": "CommonJS"
  }
}
